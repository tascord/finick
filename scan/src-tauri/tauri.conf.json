{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "scan",
  "version": "0.1.0",
  "identifier": "pet.imflo.finick.scan",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Scan",
        "width": 800,
        "height": 60,
        "alwaysOnTop": true,
        "transparent": true,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$HOME/.config/.finick/**/*.png"]
        }
      },
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
